<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="horizontal">


        <com.duy.text.converter.core.view.RoundedBackgroundEditText
            android:id="@+id/edit_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?roundBackground"
            android:gravity="top"
            android:hint="@string/input_here"
            android:inputType="textMultiLine"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="@string/choose_method"
            android:textColor="?android:textColorPrimary" />


        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spinner_choose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="?roundBackground" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_copy_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/copy"
                android:padding="8dp"
                android:src="@drawable/ic_content_copy_white_24dp"
                android:tint="?imageTintColor" />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/img_share_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/share"
                android:padding="8dp"
                android:src="@drawable/ic_share_white_24dp"
                android:tint="?imageTintColor" />
        </LinearLayout>

        <com.duy.text.converter.core.view.RoundedBackgroundEditText
            android:id="@+id/edit_output"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?roundBackground"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp" />


    </LinearLayout>
</LinearLayout>
